<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="521dp"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1">

        <ScrollView
            android:id="@+id/beforescroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Inför behandlingen"
                    android:id="@+id/textView9"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/before_undertitle"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.34"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="35dp"/>
                <TextView
                    android:id="@+id/pregnant"
                    android:text="Graviditet"
                    android:clickable="true"
                    android:onClick="toggle_contents2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_corners"
                    android:backgroundTint="#4472c4"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView
                    android:id="@+id/pregnant_info"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/medic"
                    android:text="Medicinering"
                    android:clickable="true"
                    android:onClick="toggle_contents2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_corners"
                    android:backgroundTint="#449bc1"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView
                    android:id="@+id/medic_info"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_corners"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp" />
                <TextView  android:id="@+id/earlier"
                    android:text="Tidigare undersökning"
                    android:clickable="true"
                    android:onClick="toggle_contents2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_corners"
                    android:backgroundTint="#43beb9"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/earlier_info"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp" />
                <TextView  android:id="@+id/other"
                    android:text="Övrigt"
                    android:clickable="true"
                    android:onClick="toggle_contents2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_corners"
                    android:backgroundTint="#43bb8d"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/other_info"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:backgroundTint="#FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>
    </LinearLayout>
</FrameLayout>