<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Efter behandlingen"
                    android:id="@+id/title_after_fragment"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/after_undertitle"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"/>
                <!-- activity_info layout file -->
                <!-- Clickable title -->
                <TextView  android:id="@+id/rest_1"
                    android:text="Undvik kontakt med vuxna"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/dropdown_1_round"
                    android:drawableEnd="@mipmap/ic_expand_more_white_24dp"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/rest_1_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />
                <!-- activity_info layout file -->
                <!-- Clickable title -->
                <TextView  android:id="@+id/rest_2"
                    android:text="Undvik kontakt med barn"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/dropdown_2_round"
                    android:drawableEnd="@mipmap/ic_expand_more_white_24dp"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/rest_2_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />
                <TextView  android:id="@+id/rest_3"
                    android:text="Stanna hemma från arbete"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/dropdown_3_round"
                    android:drawableEnd="@mipmap/ic_expand_more_white_24dp"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF" />
                <!--content to hide/show -->
                <TextView  android:id="@+id/rest_3_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />
                <TextView  android:id="@+id/rest_4"
                    android:text="Vänta med biobesök"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/dropdown_4_round"
                    android:drawableEnd="@mipmap/ic_expand_more_white_24dp"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/rest_4_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />
                <TextView  android:id="@+id/rest_5"
                    android:text="Undvik långa resor"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/dropdown_5_corner"
                    android:drawableEnd="@mipmap/ic_expand_more_white_24dp"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/rest_5_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />
                <TextView  android:id="@+id/rest_6"
                    android:text="Var noga med hygien"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/dropdown_6_corner"
                    android:drawableEnd="@mipmap/ic_expand_more_white_24dp"
                    android:drawableRight="@mipmap/ic_expand_more_white_24dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <!--content to hide/show -->
                <TextView  android:id="@+id/rest_6_content"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/rest_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>